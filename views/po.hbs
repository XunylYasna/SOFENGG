                </button>
            </li>
            <li class="nav-item"><br>
                <button id="dashboard" class="btn btn-home btn-block" type="button">Dashboard
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                </button>

                <button id="dashboard" class="btn btn-home btn-block" type="button">Dashboard
                    <i class="fas fa-fw fa-tachometer-alt" href='#'></i>
                </button>
                </script>
            </li>
            <li class="nav-item">
                <br>
                <button class="btn btn-danger btn-block" id="clear" type="button">
                    Clear &nbsp;
                    <i class="fa fa-eraser" aria-hidden="true"></i>
                </button>
            </li>
            <div id="currencyChange" class="input-group input-group-sm">
                <div class="input-group-prepend">
                    <span class="input-group-text" for="exchangeRate">USD to PHP: </span>
                </div>
                <input id="exchangeDisplay" type="number" class="form-control" value="50.10">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button" data-toggle="modal"
                        data-target="#accessModal">
                        <i class="fas fa-pen" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
        </ul>

        <!--    PO Form -->
        <div id="content-wrapper" class="form-wrapper">
            <form id="poForm" method="POST" class="needs-validation">

                <div class="row">
                    <div class="col-md-4 mb-md-2">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="background-color:white;">PRF# </span>
                            </div>
                            {{!-- PRF Number --}}

                            <input type="number" required class="form-control readonly" id="prfNumber" name="prfNumber"
                                placeholder="Enter PRF#">
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="button">
                                    <i class="fas fa-pen" aria-hidden="true"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 offset-md-1">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="background-color:white;">PO# </span>
                            </div>
                            {{!-- PO Number --}}

                            <input type="number" required class="form-control readonly" id="poNumber" name="poNumber"
                                placeholder="Enter PO#">
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="button">
                                    <i class="fas fa-pen" aria-hidden="true"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div id="viewPRF">
                        {{!-- View PRF button --}}
                        <button id="addpo" class="btn btn-primary hidden-print" href="backprf" type="submit"
                            role="button">View PRF &nbsp;
                            <i class="fa fa-file" aria-hidden="true"></i>
                        </button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label for="buyerField">To: </label>
                            {{!-- Buyer Field --}}
                            <input required name="buyer" type="text" class="form-control" id="buyerField"
                                placeholder="Recipient" value="{{buyer}}">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="purchaseDate">Date: </label>
                            {{!-- Date Field --}}
                            <input required name="date" type="date" class="form-control" id="purchaseDate"
                                placeholder="Enter Date" value="{{date}}" name="date">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="nameField">Pax Name/s: </label>
                            {{!-- Name Text Area --}}
                            <textarea required class="form-control " rows="5" id="nameField" placeholder="Enter Names"
                                name="names">{{names}}</textarea>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="routeField">Route: </label>
                            {{!-- Route Text Area --}}
                            <textarea required class="form-control " rows="5" id="routeField"
                                placeholder="Specify Route" name="route">{{route}}</textarea>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="docuField">Description: </label>
                            {{!-- Description Text Area --}}
                            <textarea required class="form-control" rows="5" id="docuField"
                                placeholder="Enter Description" name="description">{{description}}</textarea>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group form-inline">
                            <label for="dollarField">US$: &nbsp;</label>
                            {{!-- Dollar field --}}
                            <input required type="number" id="dollarField" onkeydown="return event.keyCode !== 69"
                                oninput="computeDollar()" class="form-control" id="dollarField"
                                placeholder="Enter Amount" value="{{dollar}}" name="dollar">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group form-inline">
                            <label for="pesoField">PHP: &nbsp;</label>
                            {{!-- Peso field --}}
                            <input required type="number" id="pesoField" onkeydown="return event.keyCode !== 69"
                                oninput="computePeso()" class="form-control" id="pesoField" placeholder="Enter Amount"
                                value="{{peso}}" name="peso">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group form-inline">
                            <label for="totalField">Total: &nbsp;</label>
                            {{!-- Total field --}}
                            <input required type="text" id="totalField" class="form-control" id="totalField"
                                name="total" disabled>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="prepField">Prepared By:</label>
                            {{!-- Prepared field --}}
                            <input required type="text" class="form-control" id="prepField" placeholder="Enter Name"
                                name="prepared" value="{{prepared}}">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="apprField">Approved By: </label>
                            {{!-- Approved Field --}}
                            <input required type="text" class="form-control" id="apprField" placeholder="Enter Name"
                                name="approved" value="{{approved}}">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="recField">Received By:</label>
                            {{!-- Received Field --}}
                            <input required type="text" class="form-control" id="recField" placeholder="Enter Name"
                                name="received" value="{{received}}">
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <!-- /.content-wrapper -->

    </div>
</div>
