<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<head>
    {{!-- Custom JS for PO --}}
    <script src="js/poJS.js"></script>

    <style>
        .invisible {
            display: none;
            visibility: hidden;
        }
    </style>


    <script>

        $(document).ready(() => {
            $('#exchangeDisplay').prop('disabled', true)
            $('#totalField').prop('disabled', true)

            $("#prfNumber").keydown(function () {
                window.onbeforeunload = () => {
                    return 'You have unsaved Changes... Do you want to leave?'
                }

                $("#prfNumber").keydown(function () {
                    // Save old value.
                    if (!$(this).val() || (parseInt($(this).val()) <= 1111111 && parseInt($(this).val()) >= 0))
                        $(this).data("old", $(this).val());
                });

                $("#prfNumber").keyup(function () {
                    // Check correct, else revert back to old value.
                    if (!$(this).val() || (parseInt($(this).val()) <= 1111111 && parseInt($(this).val()) >= 0))
                        ;
                    else
                        $(this).val($(this).data("old"));
                });

                $("#poNumber").keydown(function () {
                    // Save old value.
                    if (!$(this).val() || (parseInt($(this).val()) <= 1111111 && parseInt($(this).val()) >= 0))
                        $(this).data("old", $(this).val());
                });

                $("#poNumber").keyup(function () {
                    // Check correct, else revert back to old value.
                    if (!$(this).val() || (parseInt($(this).val()) <= 1111111 && parseInt($(this).val()) >= 0))
                        ;
                    else
                        $(this).val($(this).data("old"));
                });

                document.querySelector('#prfNumber').addEventListener("keypress", function (evt) {
                    if (evt.which != 8 && evt.which != 0 && evt.which < 48 || evt.which > 57) {
                        evt.preventDefault()
                    }
                })

                document.querySelector('#poNumber').addEventListener("keypress", function (evt) {
                    if (evt.which != 8 && evt.which != 0 && evt.which < 48 || evt.which > 57) {
                        evt.preventDefault()
                    }
                })

                document.querySelector('#dollarField').addEventListener("keypress", function (evt) {
                    if (evt.which != 8 && evt.which != 0 && evt.which < 48 || evt.which > 57) {
                        evt.preventDefault()
                    }
                })

                document.querySelector('#pesoField').addEventListener("keypress", function (evt) {
                    if (evt.which != 8 && evt.which != 0 && evt.which < 48 || evt.which > 57) {
                        evt.preventDefault()
                    }
                })

                document.querySelector('#exchangeDisplay').addEventListener("keypress", function (evt) {
                    if (evt.which != 8 && evt.which != 0 && evt.which < 48 || evt.which > 57) {
                        evt.preventDefault()
                    }
                })

                $('#dashboard').click(() => {
                    $('#myDash').submit()
                })

            })

            $(window).bind('beforeunload', () => {
                return 'Please remember to Save any Unsaved Documents...'
            })

            function disableBind() {
                //$(window).unbind('beforeunload')
                window.onbeforeunload = null;
            }

            function myFunc() {
                var text = $('div#curPass').text()
                var text1 = document.getElementById('pwd1').value

                if (text1 == text) {
                    document.getElementById('exchangeDisplay').disabled = false
                }
                else {
                    alert('Wrong Password!')
                    alert(text + " lmao " + text1)
                    document.getElementById('exchangeDisplay').disabled = true;
                    $('#pwd1').val('')
                }

            }
    </script>
    <script>
            (function () {
                'use strict';
                window.addEventListener('load', function () {
                    // Fetch all the forms we want to apply custom Bootstrap validation styles to
                    var forms = document.getElementsByClassName('needs-validation');
                    // Loop over them and prevent submission
                    var validation = Array.prototype.filter.call(forms, function (form) {
                        form.addEventListener('submit', function (event) {
                            if (form.checkValidity() === false) {
                                event.preventDefault();
                                event.stopPropagation();
                            }
                            form.classList.add('was-validated');
                        }, false);
                    });
                }, false);
            })();
    </script>
</head>

<div class="form-page">

    <div id="curPass" class="invisible">{{password}}</div>

    {{!-- Header --}}
    <nav class="navbar navbar-expand navbar-dark bg-dark static-top">
        <a class="navbar-brand mr-1"><b>
                <font color="white">Create New PO</font>
            </b></a>
    </nav>

    <div id="wrapper" class="bg-white">
        <!-- Sidebar -->
        <ul class="sidebar navbar-nav">
            <li class="nav-item">
                <button class="btn btn-primary btn-block" type="button">
                    New PRF &nbsp;
                    <i class="fa fa-file" aria-hidden="true"></i>
                </button>
            </li>
            <li class="nav-item">
                <button class="btn btn-primary btn-block" type="button" onclick="window.print();return false;">
                    Print &nbsp;
