            else {
                alert('Wrong Password!')
                document.getElementById('exchangeDisplay').disabled = false;
                $('#pwd1').val('')
            }

        }

        $(function () {
            $('[data-toggle="popover"]').popover()
        })
    </script>
</head>

<div id="curPass" class="invisible">{{password}}</div>

<div class="form-page">

    {{!-- Header --}}
    <nav class="navbar navbar-expand navbar-dark bg-dark static-top">
        <a class="navbar-brand mr-1"><b>
                <font color="white">Create New PRF</font>
            </b></a>
    </nav>


    <div id="wrapper" class="bg-white">
        <!-- Sidebar -->
        <ul class="sidebar navbar-nav">
            <li class="nav-item">
                <button class="btn btn-primary btn-block" type="button" href="/prf" onclick="window.location='/prf'">
                    New PRF &nbsp;
                    <i class="fa fa-file" aria-hidden="true"></i>
                </button>
            </li>
            <li class="nav-item">
                <button id="print" class="btn btn-primary btn-block" type="button">
                    Print &nbsp;
                    <i class="fa fa-print" aria-hidden="true"></i>
                </button>
            </li>
            <li class="nav-item">
                <button id="saveBtn" class="btn btn-success btn-block" type="button" onclick="disableBind();save()">
                    Save &nbsp;
                    <i class="fa fa-save" aria-hidden="true"></i>
                </button>
            </li>
            <li class="nav-item"><br><br>
                <button id="dashboard" class="btn btn-home btn-block" type="button" href='#'
                    onclick="dashBoar()">Dashboard
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                </button>
            </li>
            <li class="nav-item">
                <br><br>
                <button class="btn btn-danger btn-block" id="clear" type="button">
                    Clear &nbsp;
                    <i class="fa fa-eraser" aria-hidden="true"></i>
                </button>
            </li>
            <div id="currencyChange" class="input-group input-group-sm">
                <div class="input-group-prepend">
                    <span class="input-group-text" for="exchangeRate">USD to PHP: </span>
                </div>
                <input id="exchangeDisplay" type="number" class="form-control" value="50.10">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button" data-toggle="modal"
                        data-target="#accessModal">
                        <i class="fas fa-pen" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
        </ul>

        <!--    PRF Form -->
        <div id="content-wrapper" class="form-wrapper">
            <form class="form-horizontal needs-validation" method="POST" id="prfForm">
                <div class="row">
                    <div class="col-md-4 mb-md-2">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="background-color:white;">PRF# </span>
                            </div>
                            {{!-- PRF Number Field--}}
                            <input type="number" readonly min='1' step="1" class="form-control" id="prfNumber"
                                name="prfNumber" placeholder="Enter PRF#" value={{prfNumber}} min="0" max="6">
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="button" data-toggle="popover"
                                    data-content="PRF and PO Number can be manually edited in the settings area">
                                    <i class="fas fa-pen" aria-hidden="true"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label for="buyerField">To: </label>
                            {{!-- Buyer Field --}}
                            <input name="buyer" type="text" class="form-control" id="buyerField" placeholder="Recipient"
                                value="{{buyer}}" required>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="purchaseDate">Date: </label>
                            {{!-- Date Field --}}
                            <input name="date" type="date" class="form-control" id="purchaseDate"
                                placeholder="Enter Date" value="{{date}}" required>
                            {{!-- 2013-01-08 date format dapat pero hekhek wala pa --}}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        {{!-- Dynamic Entering of Names --}}
                        {{!-- This field is stored in a hidden input name="names" created on the prfJS.js file --}}
                        <div class="form-group">
                            <label for="nameField" style="margin-bottom:1em">Pax Name/s: </label>
                            <button id="addPax" style="margin-left:1em" class="btn btn-success btn-sm" type="button">
                                <span class="fa fa-plus"></span> &nbsp; Add
                            </button>
                            <table class="table table-unbordered table-hover table-sm" id="nameField">
                                <thead>
                                    <tr>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <input id="name" type="text" class="form-control" size="80"
                                                placeholder="Enter Passenger's Name" required>
                                        </td>
                                        <td>
                                            <div class="text-danger invisible">
                                                <large>Empty Text</large>
                                            </div>
                                        </td>
                                        <!--                                        <td>
                                            <div class="checkbox">
                                                <input type="checkbox" value="">
                                            </div>
                                        </td>-->
                                        <td><button id="remove" class="btn btn-danger delete"
                                                disabled="true">Remove</button></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="routeField">Route: </label>
                            {{!-- Route Field --}}
                            <textarea class="form-control " rows="5" id="routeField" name="route"
                                placeholder="Specify Route" value={{route}} required></textarea>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="partField">Particulars: </label>
                            {{!-- Particulars Field --}}
                            <textarea class="form-control" rows="5" id="partField" name="particulars"
                                placeholder="Specify Particulars" value={{particulars}} required></textarea>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="fareField">Airfare: </label>
                            {{!-- Airfare Field --}}
                            <input type="number" min="0" step=".01" class="form-control" name="airFare" id="fareField"
                                placeholder="Specify Airfare" value={{airFare}} required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="taxField">Travel Tax: </label>
                            {{!-- Travel Tax Field --}}
                            <input type="number" min="0" step=".01" class="form-control" name="taxField" id="taxField"
                                placeholder="Specify Travel Tax" value={{travelTax}} required>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="docuField">Documentation: </label>
                            {{!-- Documentation Field --}}
                            <textarea class="form-control" rows="5" id="docuField" name="documentation"
                                placeholder="Enter Documentations" value={{documentations}} required></textarea>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group form-inline">
                            <label for="dollarField">USD: &nbsp;</label>
                            {{!-- USD Field --}}
                            <input type="number" min="0" step=".01" id="dollarField" name="dollar"
                                onkeydown="return event.keyCode !== 69" oninput="computeDollar()" class="form-control"
                                placeholder="Enter Amount" value={{usAmount}}>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group form-inline">
                            <label for="pesoField">PHP: &nbsp;</label>
                            {{!-- PHP Field --}}
                            <input type="number" min="0" step=".01" id="pesoField" name="peso"
                                onkeydown="return event.keyCode !== 69" oninput="computePeso()" class="form-control"
                                placeholder="Enter Amount" value={{phpAmount}}>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group form-inline">
                            <label for="totalField">Total: &nbsp;</label>
                            {{!-- Total Field --}}
                            <input type="text" min="0" value="0" step=".01" id="totalField" name="total"
                                class="form-control" id="totalField" value="0.00" required>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="prepField">Prepared By:</label>
                            {{!-- Prepared by Field --}}
                            <input id="prepared" type="text" class="form-control" id="prepField" name="prepared"
                                placeholder="Enter Name" value="{{preparedBy}}" required>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="apprField">Approved By: </label>
                            {{!-- Approbed by Field --}}
                            <input id="approved" type="text" class="form-control" id="apprField" name="approved"
                                placeholder="Enter Name" value="{{approvedBy}}" required>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="recField">Received By:</label>
                            {{!-- Received by Field --}}
                            <input id="received" type="text" class="form-control" id="recField" name="received"
                                placeholder="Enter Name" value="{{receivedBy}}" required>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <!-- /.content-wrapper -->

    </div>
</div>
<!-- /#wrapper -->

<!-- Access Modal -->
<div class="modal fade" id="accessModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Credentials Required</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">This page requires an admin password to proceed.</div>
            <div class="card-body">
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control form-control-lg rounded-0" id="pwd1" required=""
                        autocomplete="new-password">
                    <div class="invalid-feedback">Enter your password too!</div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <a class="btn btn-primary" href="#" id="editExchange" data-dismiss="modal"
                    onclick="myFunc()">Proceed</a>
            </div>
        </div>
    </div>
</div>

